<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">


    <ImageView
        android:id="@+id/connectionErrorImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/connection_error"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/connectionErrorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connection_error"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/connectionErrorImage"
        app:layout_constraintLeft_toLeftOf="@id/connectionErrorImage"
        app:layout_constraintRight_toRightOf="@id/connectionErrorImage"/>

</android.support.constraint.ConstraintLayout>